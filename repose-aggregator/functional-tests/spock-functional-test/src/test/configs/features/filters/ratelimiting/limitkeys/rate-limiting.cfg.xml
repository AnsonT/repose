<?xml version="1.0" encoding="UTF-8"?>
<rate-limiting xmlns="http://docs.rackspacecloud.com/repose/rate-limiting/v1.0">
    <request-endpoint uri-regex="/service/limits" include-absolute-limits="false"/>

    <limit-group id="some-id" groups="this-group" default="false">
        <limit uri="/foo/*" uri-regex="/foo/(.*)" http-methods="GET" unit="MINUTE" value="2"/>
        <limit uri="/foo/*" uri-regex="/foo/(.*)" http-methods="POST GET" unit="MINUTE" value="3"/>
    </limit-group>

</rate-limiting>
