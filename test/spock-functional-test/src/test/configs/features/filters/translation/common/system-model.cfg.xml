<?xml version="1.0" encoding="UTF-8"?>

<system-model xmlns="http://docs.rackspacecloud.com/repose/system-model/v2.0">

  <repose-cluster id="repose">
    <nodes>
      <node id="node" hostname="localhost" http-port="${repose_port}"/>
    </nodes>
    <filters>
        <filter name="translation"/>
        <filter name="translation" configuration="translation-response-docfalse.cfg.xml" uri-regex="/translation/responsedocfalse/.*" />
        <filter name="translation" configuration="translation-request-docfalse.cfg.xml" uri-regex="/translation/requestdocfalse/.*" />
    </filters>
    <destinations>
      <endpoint id="service" protocol="http" hostname="${target_hostname}" root-path="/" port="${target_port}" default="true"/>
    </destinations>
  </repose-cluster>


</system-model>
